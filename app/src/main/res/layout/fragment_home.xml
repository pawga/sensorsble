<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.content.Context"/> <!-- for example-->
        <variable
            name="viewModel"
            type="com.pawga.blesensors.ui.home.HomeViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.pawga.blesensors.ui.SensorViews.SensorBigView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:type="CO2"
            app:unit="PPM"
            app:value="766" >
        </com.pawga.blesensors.ui.SensorViews.SensorBigView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="32dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/temperature_without_background" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="24"
                android:textColor="@android:color/black"
                android:textSize="56sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/degrees" />

        </LinearLayout>
    </LinearLayout>
</layout>